{
  "name": "clawcontrol-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:css": "tailwindcss -i src/styles/tailwind.css -o src/assets/css/site.css --watch --minify",
    "build": "tailwindcss -i src/styles/tailwind.css -o src/assets/css/site.css --minify && eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  }
}
